<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|bottom"
    android:background="@color/colorPrimario"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtOperacion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:paddingEnd="10sp"
        android:gravity="end|center"/>
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:paddingEnd="10sp"
        android:gravity="end|center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnClear"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingStart="40sp"
                android:background="@color/colorBoton"
                android:drawableStart="@drawable/ic_round_backspace_24"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnPorcentaje"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                ></Button>

            <Button
                android:id="@+id/btnDividir"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="รท"
                android:background="@color/colorBoton"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnNum7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnNum4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnResta"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnNum1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:paddingStart="40sp"
                android:textColor="@color/colorText"
                android:drawableStart="@drawable/ic_baseline_info_24"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnNum0"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/colorText"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/colorText"
                android:background="@color/colorBoton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"></Button>

        </LinearLayout>

    </GridLayout>

</LinearLayout>